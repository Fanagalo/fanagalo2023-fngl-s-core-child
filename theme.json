{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "appearanceTools": true,
        "layout": {
            "contentSize": "600px",
            "wideSize": "1040px"
        },
        "color": {
            "palette": [
                {
                    "slug": "black",
                    "color": "#000000",
                    "name": "zwart"
                },
                {
                    "slug": "white",
                    "color": "#ffffff",
                    "name": "wit"
                },
                {
                    "slug": "fngl-header-text",
                    "color": "hsl(0, 0%, 30%)",
                    "name": "koptekst-kleur"
                },
                {
                    "slug": "fngl-body-tekst",
                    "color": "hsl(0, 0%, 20%)",
                    "name": "platte tekst-kleur"
                },
                {
                    "slug": "fngl-dark-blue",
                    "color": "#002266",
                    "name": "donkerblauw"
                },
                {
                    "slug": "fngl-light-blue",
                    "color": "#00b6ee",
                    "name": "lichtblauw"
                },
                {
                    "slug": "fngl-purple",
                    "color": "#661177",
                    "name": "paars"
                },
                {
                    "slug": "fngl-magenta",
                    "color": "#ee0080",
                    "name": "magenta"
                },
                {
                    "slug": "fngl-dark-red",
                    "color": "#992233",
                    "name": "donkerrood"
                },
                {
                    "slug": "fngl-red",
                    "color": "#d30000",
                    "name": "rood"
                },
                {
                    "slug": "fngl-yellow",
                    "color": "#ffd300",
                    "name": "geel"
                }
            ],
            "defaultPalette": false,
            "gradients": [
                {
                    "slug": "fngl-gradient",
                    "gradient": "linear-gradient(100deg, var(--wp--preset--color--fngl-dark-blue), var(--wp--preset--color--fngl-light-blue), var(--wp--preset--color--fngl-purple), var(--wp--preset--color--fngl-magenta), var(--wp--preset--color--fngl-dark-red), var(--wp--preset--color--fngl-red), var(--wp--preset--color--fngl-yellow))",
                    "name": "Fanagalo verloop"
                },
                {
                    "slug": "fngl-gradient-dark-blue-purple",
                    "gradient": "linear-gradient(100deg, var(--wp--preset--color--fngl-dark-blue), var(--wp--preset--color--fngl-light-blue), var(--wp--preset--color--fngl-purple))",
                    "name": "Fanagalo verloop donkerblauw paars"
                },
                {
                    "slug": "fngl-gradient-purple-dark-red",
                    "gradient": "linear-gradient(100deg, var(--wp--preset--color--fngl-purple), var(--wp--preset--color--fngl-magenta), var(--wp--preset--color--fngl-dark-red))",
                    "name": "Fanagalo verloop paars donkerrood"
                },
                {
                    "slug": "fngl-gradient-dark-red-yellow",
                    "gradient": "linear-gradient(100deg, var(--wp--preset--color--fngl-dark-red), var(--wp--preset--color--fngl-red), var(--wp--preset--color--fngl-yellow))",
                    "name": "Fanagalo verloop donkerrood geel"
                }
            ],
            "defaultGradients": false
        },
        "typography": {
            "dropCap": false,
            "fluid": true,
            "fontFamilies": [
                {
                    "fontFace": [
                        {
                            "fontFamily": "Karla",
                            "fontStretch": "normal",
                            "fontStyle": "normal",
                            "fontWeight": "400",
                            "src": [
                                "file:./fonts/karla-v30-latin_latin-ext-regular.woff2"
                            ]
                        },
                        {
                            "fontFamily": "Karla",
                            "fontStretch": "normal",
                            "fontStyle": "italic",
                            "fontWeight": "400",
                            "src": [
                                "file:./fonts/karla-v30-latin_latin-ext-italic.woff2"
                            ]
                        },
                        {
                            "fontFamily": "Karla",
                            "fontStretch": "normal",
                            "fontStyle": "normal",
                            "fontWeight": "700",
                            "src": [
                                "file:./fonts/karla-v30-latin_latin-ext-700.woff2"
                            ]
                        },
                        {
                            "fontFamily": "Karla",
                            "fontStretch": "normal",
                            "fontStyle": "italic",
                            "fontWeight": "700",
                            "src": [
                                "file:./fonts/karla-v30-latin_latin-ext-700italic.woff2"
                            ]
                        }
                    ],
                    "fontFamily": "Karla, sans-serif",
                    "name": "Karla",
                    "slug": "karla"
                },
                {
                    "fontFace": [
                        {
                            "fontFamily": "PT Serif",
                            "fontStretch": "normal",
                            "fontStyle": "normal",
                            "fontWeight": "400",
                            "src": [
                                "file:./fonts/pt-serif-v18-latin_latin-ext-regular.woff2"
                            ]
                        },
                        {
                            "fontFamily": "PT Serif",
                            "fontStretch": "normal",
                            "fontStyle": "italic",
                            "fontWeight": "400",
                            "src": [
                                "file:./fonts/pt-serif-v18-latin_latin-ext-italic.woff2"
                            ]
                        },
                        {
                            "fontFamily": "PT Serif",
                            "fontStretch": "normal",
                            "fontStyle": "normal",
                            "fontWeight": "700",
                            "src": [
                                "file:./fonts/pt-serif-v18-latin_latin-ext-700.woff2"
                            ]
                        },
                        {
                            "fontFamily": "PT Serif",
                            "fontStretch": "normal",
                            "fontStyle": "italic",
                            "fontWeight": "700",
                            "src": [
                                "file:./fonts/pt-serif-v18-latin_latin-ext-700italic.woff2"
                            ]
                        }
                    ],
                    "fontFamily": "\"PT Serif\", serif",
                    "name": "PT Serif",
                    "slug": "pt-serif"
                }
            ]
        }
    },
    "styles": {
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--karla)",
            "fontSize": "var(--wp--preset--font-size--medium)",
            "lineHeight": "1.6"
        }
    }
}
